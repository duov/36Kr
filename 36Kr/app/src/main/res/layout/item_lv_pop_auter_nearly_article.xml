<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/item_author_pop_article_head_iv"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/normal_margin"
        />
    <TextView
        android:id="@+id/item_author_pop_article_introduce_tv"
        android:layout_alignTop="@id/item_author_pop_article_head_iv"
        android:layout_toRightOf="@id/item_author_pop_article_head_iv"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
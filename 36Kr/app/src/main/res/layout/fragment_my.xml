<?xml version="1.0" encoding="utf-8"?>
<!--my Fragment的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/backgroundOfFindAndMy">

        <ImageView
            android:id="@+id/my_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_icon_setting"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/normal_margin"/>

        <RelativeLayout
            android:id="@+id/my_data"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/my_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/my_common_avatar_margin"
                android:src="@mipmap/common_avatar"/>
            <TextView
                android:id="@+id/my_do_not_finish_tv"
                android:layout_toRightOf="@id/my_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textViewSearch"
                android:layout_alignTop="@id/my_avatar"
                android:text="@string/my_avatar_havent_finish"
                android:textSize="@dimen/my_avatar_have_not_finish_text"/>
            <TextView
                android:layout_toRightOf="@id/my_avatar"
                android:layout_below="@id/my_do_not_finish_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_go_finish"
                android:layout_marginTop="@dimen/normal_margin"
                android:textColor="@color/textViewSearch"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_icon_arrow"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/normal_margin"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/my_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/normal_padding"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/normal_margin"
                        android:src="@mipmap/mine_icon_message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/my_my_message" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/normal_padding"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/normal_margin"
                        android:src="@mipmap/mine_icon_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/my_my_order" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_view_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_account_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_account" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_count_information" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_item_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_prove_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_prove" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_prove" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_view_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_collection_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_favorite" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_collection_article" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_item_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_invent_company_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_company" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_my_invent_company" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_item_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_invent_paper_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_coupon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_my_invent_paper" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_item_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_understand_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_understand" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_understand_invent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_item_line"
                android:background="@color/find_scroll_line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_view_line"
                android:background="@color/find_scroll_line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/scroll_item_line"
                android:background="@color/find_scroll_line" />

            <LinearLayout
                android:id="@+id/my_hotline_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/mine_icon_hotline" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_hot_line" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:text="@string/my_hot_line_number"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scroll_padding"
                    android:src="@mipmap/discovery_and_my_icon_list_arrow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
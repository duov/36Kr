<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--DrawerLayout是我们能够实现Navigation Drawer的关键所在.
         然后在里面添加两个元素,一个用作主界面来显示内容(当Navigation Drawer
         隐藏的时候), 另一个用来显示Navigation Drawer 的内容-->
    <!--主界面显示的内容(drawer隐藏)-->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/activity_main"/>
    </FrameLayout>

    <!--抽屉的布局-->
    <LinearLayout
        android:id="@+id/drawer_drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/textViewSearch"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drawer_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:src="@mipmap/news_toolbar_icon_back" />
        <ListView
            android:id="@+id/drawer_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"/>


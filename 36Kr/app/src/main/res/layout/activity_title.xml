<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_vertical_margin"
    android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/title_navigation_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/title_navigation_padding"
        android:src="@mipmap/nav_icon_navigation"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="@string/title_name"
        android:gravity="center"

        />
    <ImageView
        android:id="@+id/title_search_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/nav_icon_search"
        android:padding="@dimen/title_navigation_padding"
        />




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_logo_margin"
        android:layout_marginRight="@dimen/login_logo_margin">

        <RelativeLayout
            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/login_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/login_logo_margin"
                android:text="@string/login_login_input_phone_number"
                android:textColor="@color/tabLayoutTextBefore"
                android:textSize="@dimen/my_avatar_have_not_finish_text" />

            <EditText
                android:id="@+id/login_num_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/login_logo_margin"
                android:textColor="@color/news_lv_item_title"
                android:textSize="@dimen/my_avatar_have_not_finish_text" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/login_num_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="@dimen/normal_margin"
            android:paddingTop="@dimen/login_logo_margin"
            android:src="@mipmap/login_icon_delete"
            android:visibility="invisible"/>


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_below_line_height"
        android:layout_marginLeft="@dimen/login_logo_margin"
        android:layout_marginRight="@dimen/login_logo_margin"
        android:layout_marginTop="@dimen/normal_padding"
        android:background="@color/tabLayoutTextBefore" />

    <LinearLayout
        android:id="@+id/psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_logo_margin"
        android:layout_marginRight="@dimen/login_logo_margin"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/login_psw_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/login_logo_margin"
                android:text="@string/login_login_input_psw"
                android:textColor="@color/tabLayoutTextBefore"
                android:textSize="@dimen/my_avatar_have_not_finish_text" />

            <EditText
                android:id="@+id/login_psw_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/login_logo_margin"
                android:singleLine="true"
                android:textColor="@color/news_lv_item_title"
                android:textSize="@dimen/my_avatar_have_not_finish_text" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/login_psw_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:src="@mipmap/login_icon_delete"
            android:visibility="invisible" />

        <CheckBox
            android:id="@+id/login_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:button="@null"
            android:background="@drawable/selector_login_eye" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_below_line_height"
        android:layout_below="@id/login_psw_et"
        android:layout_marginLeft="@dimen/login_logo_margin"
        android:layout_marginRight="@dimen/login_logo_margin"
        android:layout_marginTop="@dimen/normal_padding"
        android:background="@color/tabLayoutTextBefore" />

    <TextView
        android:id="@+id/login_forget_psw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/login_logo_margin"
        android:layout_marginRight="@dimen/login_logo_margin"
        android:padding="@dimen/normal_padding"
        android:text="@string/login_login_forget_psw" />

    <TextView
        android:id="@+id/login_btn"
        android:gravity="center"
        android:padding="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_logo_margin"
        android:layout_marginRight="@dimen/login_logo_margin"
        android:layout_marginTop="@dimen/login_margin_top"
        android:background="@drawable/shap_login_button"
        android:text="@string/login_login_btn"
        android:textColor="@color/tabLayoutTextBefore" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/login_logo_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_icon_wechat" />

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/between_qq_weibo"
            android:src="@mipmap/login_icon_qq" />

        <ImageView
            android:id="@+id/login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/between_qq_weibo"
            android:src="@mipmap/login_icon_weibo" />
    </LinearLayout>
</LinearLayout>

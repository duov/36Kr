<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drawer_list_item_iv"
        android:layout_width="@dimen/drawer_image_width"
        android:layout_height="@dimen/drawer_image_height"
        android:layout_margin="@dimen/normal_margin"
        android:background="@color/backgroundOfFindAndMy" />

    <TextView
        android:id="@+id/drawer_list_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        />

</LinearLayout>
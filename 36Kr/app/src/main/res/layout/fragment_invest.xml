<?xml version="1.0" encoding="utf-8"?>
<!--股权投资Fragment-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/scroll_item_line"
        android:background="@color/find_scroll_line" />
    <android.support.design.widget.TabLayout
        android:id="@+id/invest_fragment_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/tabLayoutTextAfter"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/scroll_item_line"
        android:background="@color/find_scroll_line" />


    <android.support.v4.view.ViewPager
        android:id="@+id/invest_fragment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>



</LinearLayout>